<script>
    const modal = $('.modal');
    const btnLogin = $('a.login');
    
    btnLogin.on('click', function(e) {
        e.preventDefault();
        modal.addClass('modal--active');

        const modalClose = $('.modal__close');
        modalClose.on('click', function() {
            modal.removeClass('modal--active');
        });
    });

    $(window).scroll(function() {
    var scrollTop = $(this).scrollTop();
    var opacity = 1 - (scrollTop / 800);
    var x = Math.floor(opacity * 100);
    console.log(x);
    var css = `brightness(${x}%)`;
    console.log(css);

    if(opacity >= 0) {
        $('.hero-image').css('filter', css);
    }
});

    $('.book').hover(function() {
        $(this).find('.star').addClass('animate');
    }, function() {
        $(this).find('.star').removeClass('animate');
    });

    $(window).scroll(function() {
    var scrollPos = $(this).scrollTop();
    var windowHeight = $(this).height();
    var coverPos = $('.cover').offset().top + 150;

    if (scrollPos + windowHeight >= coverPos) {
        let items = $('.cover');
        items.each(function(i) {
            setTimeout(function() {
                items.eq(i).addClass('book-anim');
            }, 300 * (i+1));
        });
    } else {
        $('.cover').removeClass('book-anim');
    }
});

</script>